<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="8dp" />

            <gradient android:angle="270" android:centerColor="#11A6BD" android:centerX="50%" android:endColor="#010461" android:startColor="#010461" android:type="linear" />

            <stroke android:width="2dp" android:color="#ffffff" />
        </shape></item>
    <item android:state_focused="true"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="8dp" />

            <gradient android:angle="270" android:centerColor="#01034F" android:centerX="50%" android:endColor="#010461" android:startColor="#010461" android:type="linear" />

            <stroke android:width="5dp" android:color="#ffffff" />
        </shape></item>
    <item><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="8dp" />

            <gradient android:angle="270" android:centerColor="#01034F" android:centerX="50%" android:endColor="#010461" android:startColor="#010461" android:type="linear" />

            <stroke android:width="2dp" android:color="#ffffff" />
        </shape></item>

</selector>